# Production Environment Configuration for AWS EC2

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/mindlyfe_prod
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mindlyfe_prod
DB_USER=mindlyfe_user
DB_PASSWORD=your_secure_password_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_this_in_production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=production

# Frontend Configuration
VITE_API_URL=http://localhost:3001/api
VITE_APP_NAME=Mindlyfe
VITE_APP_VERSION=1.0.0

# Security
CORS_ORIGIN=http://localhost:8080

# Logging
LOG_LEVEL=info

# Session Configuration
SESSION_SECRET=your_session_secret_here_change_this_in_production

# File Upload
MAX_FILE_SIZE=10mb

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100